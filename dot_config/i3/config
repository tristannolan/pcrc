# Styles
set $border_size 2
set $clr_unused #00000000

gaps inner 8

default_border pixel $border_size
default_floating_border pixel $border_size
for_window [class="^.*"] border pixel $border_size

# Color class           border		backgr.		text		indicator	child_border
client.focused          $clr_unused $clr_unused $clr_unused $pink	$pink
client.focused_inactive $clr_unused $clr_unused $clr_unused #33333300	#33333300
client.unfocused        $clr_unused $clr_unused $clr_unused $clr_unused #00000000
client.urgent           $clr_unused $clr_unused $clr_unused $clr_unused #00000000
client.placeholder      $clr_unused $clr_unused $clr_unused $clr_unused #00000000

client.background       #ffffff

# New instance
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id ~/.fehbg
exec --no-startup-id solaar --window=hide
exec --no-startup-id openrgb --profile ~/.config/OpenRGB/tristannolan.orp --startminimized
